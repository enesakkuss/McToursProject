@model PassengerDto

<h1>Yeni Araç Tanımı</h1>
<div class="row">
    <div class="col-12 col-sm-10 col-md-6 col-lg-4">
        @if (TempData.ContainsKey("ResultMessage"))
        {
            <div class="alert alert-danger ">
                @TempData["ResultMessage"]
            </div>
        }
        <form asp-action="Update" asp-controller="Passengers" method="post">
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">İsim</label>
                <input asp-for="FirstName" type="text" class="form-control"></input>
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Soyisim</label>
                <input asp-for="LastName" type="text" class="form-control"></input>
            </div>
            <div class="mb-3">
                <label asp-for="IdentityNumber" class="form-label">TC No</label>
                <input asp-for="IdentityNumber" type="text" class="form-control" />
            </div>

            <label class="form-label">Cinsiyet</label>
            <div class="mb-3">
                @foreach (ValueNameObject obj in ViewBag.GenderSelectedList)
                {
                    <input type="radio" id="gender_@obj.Value" name="gender" value="@obj.Value" class="mb-3" @((int)Model.Gender == obj.Value?"checked":string.Empty) />
                    <label for="gender_@obj.Value">@obj.Name</label>

                }
            </div>
            <div class="mb-3">
                <label asp-for="DateOfBirth" class="form-label">Doğum Tarihi</label>

                <input asp-for="DateOfBirth" placeholder="Lütfen Bir Tarih Seçin" class="form-select" style="background-color:white" />
            </div>
            <div class="mb-3">


                <div class="mb-3">
                    <div class="float-end">
                        <button class="btn btn-success" type="submit">
                            Kaydet
                        </button>
                    </div>
                </div>
        </form>
    </div>

</div>

@section Scripts{
    <script>
        document.getElementById('DateOfBirth').flatpickr({
            dateFormat: "Y-m-d H:i",
            time_24hr: true
        });
    </script>
}
