@model VehicleMakeDto?

<h1> Marka Düzenleme</h1>
<div class="row">
    <div class="col-12 col-sm-10 col-md-6 col-lg-4">
        @if (ViewData.ContainsKey("ResultMessage"))
        {
            <div class="alert alert-danger">
                @ViewData["ResultMessage"]
            </div>
        }
        <form asp-controller="VehicleMakes" asp-action="Update" method="post">
            
            <div class="mb-3">
                <label for="name" class="form-label">Marka Adı</label>
                <input type="text" id="name" name="name" class="form-control" value="@Model.Name" />
            </div>
            <div class="mb-3">
                <div class="float-end">
                    <a class="btn btn-outline-warning" asp-action="Index">İptal</a>
                    <button class="btn btn-success" type="submit">
                        Güncelle
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>